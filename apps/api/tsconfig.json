{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@/config/*": ["./src/config/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/common/*": ["./src/common/*"],
      "@repo/types": ["../../packages/types/src/index.ts"],
      "@repo/utils": ["../../packages/utils/src/index.ts"]
